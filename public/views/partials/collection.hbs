<div class='resource' data-id='{{_id}}' data-name='{{name}}' data-when='{{when}}' data-type='collection' draggable="true">
  <input type='checkbox' class='resource-select' />
  <a href='/collections/{{_id}}' class='to'>
    <div class='img'>
      <img src='/collections/{{_id}}/cover' />
    </div>
        
    <h4 class='resource-name'>{{name}}</h4>
  </a>
  
  <span>{{{by owners}}}</span>
  
  <small>Collection</small>
  
  <span class='when'>{{{timeago when}}}</span>
</div>
