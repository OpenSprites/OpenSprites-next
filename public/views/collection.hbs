<header><main>
  <h1>{{collection.name}}</h1>
  {{{by collection.owners}}}
  <br>
  <small>Created {{{timeago collection.when}}}</small>
</main></header>

<main>
  <div {{#if collection.canSetAbout}}contenteditable{{/if}} class='bio markdown-about-edit'>
    {{{md collection.about}}}
  </div>
  <small></small>

  {{#if collection.canSetAbout}}
    <a id='edit' class='btn flat' style='float:right'>edit collection info</a>
  {{/if}}

  <script>var bio_raw = '{{json collection.about}}'; var csrfToken = '{{json csrfToken}}';</script>

  <div class='resources'>
    {{#each resources}}
      {{> resource this}}
    {{/each}}
  </div>
</main>