#file-uploads {
  min-height 400px
  border 5px solid transparent
  transition background 0.2s
  position relative
  
  &.drag {
    border 5px dashed os-light
    background rgba(os-light, 0.5)
    &:after {
      content "Drop files here"
      position absolute
      top 50%
      left 50%
      transform translateX(-50%) translateY(-50%)
      color rgba(os, 0.5)
      z-index 5
      font-size 3em
    }
  }

  .resource:not(.has-file) .img {
    background white
  }
  
  .resource {
    position: relative
    background white
  }
  
  .overlay {
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%
    display: none
    z-index 2
    background: rgba(0, 0, 0, 0.5)
    
    svg.progress {
      position: absolute
      top: 10%
      left: calc(50% - 55px)
    }
    
    .progress-text {
      position: absolute
      top: calc(10% + 55px)
      text-align: center
      width: 100%
      color: white
      transform: translateY(-50%)
      
      a {
        color: white;
        text-decoration: underline;
      }
    }
    
  }
  
  .to {
    cursor default
  }
  
  .btn.remove {
    float right
    margin .2em
    padding 0
    
    width 36px
    line-height 36px - 4px // why? idek
    text-align center

    border-radius 1337px
    
    background white

    z-index 1
    position relative
    
    transition color 150ms easing
    &:hover {
      color os-dark
    }
  }
  
  .file-select-text {
    display inline-block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    
    width 7rem
    text-align center
  }
  
  .has-file .file-select-text {
    display none
  }

  .file-selected-text {
    display none
  }
  
  .file-upload-name {
    cursor text
    outline 0
    padding 0.5em 16px
    text-overflow initial
    width: 100%;
    box-sizing: border-box;
    
    &:hover, &:focus {
      background rgba(os-grey, 0.07)
    }
  }
  
  .to + span {
    margin-top calc(-0.5em + 16px)
  }
  
  input[type=file] {
    display none
  }
}

.upload-error {
  display: none
  border: 1px solid red
  border-radius: 1em
  text-align: center
}