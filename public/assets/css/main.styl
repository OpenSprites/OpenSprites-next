/**
 * css/main.styl
 * -------------
 * 
 * The main website style.
 */

os = #659593
os-grey = #4E5555
os-dark = #333333
os-light = #C8DDDB

@require 'font.styl'
@require 'nav.styl'
@require 'signup-join.styl'

body {
  color os-grey
  background os-light
  
  margin 0
  padding 0
}

input:-webkit-autofill {
  -webkit-box-shadow 0 0 0px 1000px white inset
}

.c, .container {
  width calc(100% - 48px * 2)
  max-width 1280px
  
  margin 0 auto
}

main {
  @extend .container
  
  margin 2em auto

  color os-dark
  background white
  
  padding 48px
  
  > :first-child {
    margin-top 0
  }
  
  > :last-child {
    margin-bottom 0
  }
}

code, pre {
  word-break break-word
}

.split {
  display block

  > * {
    flex-grow 1
    flex-shrink 0
    
    width 100%
  }
  
  @media (min-width: 1000px) {
    display flex
    
    > * {
      width 50%
    }
  }
}