.user {
  #row {
    display flex
    height 128px
    
    +mobile() {
      height 64px
    }

    #avatar {
      display inline-block
      height 128px
      width 128px
      
      background white
      margin-right 36px
      
      +mobile() {
        height 64px
        width 64px
        margin-right 8px
      }
    }

    #username {
      display inline-block
      line-height 128px
      flex 1
      margin 0
      
      +mobile() {
        line-height 64px
      }
    }
    
    small {
      // timeago
      +mobile() {
        display none
      }
    }
  }
}

.bio {
  @extend p
  
  p {
    margin 0
    padding 0
  }
  
  padding .5em
  
  > *:first-child {
    margin-top 0
  }
  
  border-radius 3px
  outline 0
  
  blockquote {
    border-left 3px solid #ddd
  }
  
  border: 2px solid transparent
  margin-top: 0.2em
  margin-bottom: 0.2em
  
  &[contenteditable] {
    &:hover, &:focus {
      background rgba(black, 0.02)
      border: 2px dashed #659593
    }
  }
}