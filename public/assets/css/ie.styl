/* 
IE specific styles 
Currently only tested on IE11
*/

/* IE and Edge styles */

body.ie, body.edge {
  nav .logo {
    background-image url("/assets/img/logo/ie-icon.png") !important
  }
  
  main {
    background-color transparent !important
    display block 
  }
  
  .post-comment .btn {
    margin-top 10px
  }
  
  .material-icons {
    font-feature-settings "liga" 1 !important
  }
}

/* IE only styles */

body.ie {
  input[type="text"], input[type="password"], input[type="email"] {
    padding-bottom 8px
  }
}