/* 
IE specific styles 
Currently only tested on IE11
*/

@media screen and (min-width:0\0) and (min-resolution: +72dpi) {

  /* * {
   font-feature-settings normal !important
  } */
  
  html {
   overflow-x hidden /* no idea what's causing the extra width */
   max-width 100%
  }
  
  nav .logo {
    background-image url("/assets/img/logo/ie-icon.png") !important
  }
  
  /*header main {
    display inline-block !important
    margin: 0 !important
  }*/
  
  main {
    background-color transparent !important
    display block 
  }
  
  .post-comment .btn {
    margin-top 10px
  }
  
  input[type="text"], input[type="password"], input[type="email"] {
    padding-bottom 8px
  }
  
  .material-icons {
    font-feature-settings "liga" 1 !important
  }
  
}
