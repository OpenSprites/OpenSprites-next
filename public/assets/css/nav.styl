/**
 * css/nav.styl
 * -------------
 * 
 * The <nav>bar styling.
 */

nav {
  width 100%
  height 64px
  
  user-select none
  
  font-family 'Raleway', sans-serif
  text-transform uppercase
  font-size 16px
  letter-spacing 0.5px

  color white
  background os
  
  > .c {
    height 100%
  }
  
  .nav {
    display inline-block
    float right
  }
  
  // Meh. Needs work.
  .logo {
    float left
    padding-left 64px
    
    font-size 18px
    
    background-image url('/assets/img/logo/icon.png')
    background-size contain
    background-position left center
    background-repeat no-repeat
    
    b {
      font-weight 800
    }
  }
  
  a {
    display inline-block

    height 48px
    line-height 48px
    
    padding 8px 16px
    margin 0
    border-bottom 0 !important
    
    color white
    
    &:hover {
      text-shadow 0 0 8px rgba(white, 0.4)
      
      b {
        text-shadow 0 0 4px rgba(white, 0.4)
      }
    }
  }
}